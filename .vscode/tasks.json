{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rubocop: Check",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rubocop"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "rubocop",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+): ([A-Z]): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ]
    },
    {
      "label": "Rubocop: Fix",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rubocop", "-A"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Rubocop: Fix Current File",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rubocop", "-A", "${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "RSpec: Run All Tests",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "RSpec: Run Current File",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Bundle Install",
      "type": "shell",
      "command": "bundle",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "RBS: Validate",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rbs", "validate"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "rbs",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ]
        }
      ]
    },
    {
      "label": "RBS: Generate Prototypes",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rbs", "prototype", "rb", "lib"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Steep: Type Check",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "steep", "check"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "steep",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+): \\[([^\\]]+)\\] (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ]
    },
    {
      "label": "Steep: Watch Mode",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "steep", "watch", "lib"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "steep",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+): \\[([^\\]]+)\\] (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^# Type checking files:",
            "endsPattern": "^(No type error detected|Detected \\d+ problems)"
          }
        }
      ]
    },
    {
      "label": "Steep: Watch All Targets",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "steep", "watch", "--target", "lib"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "steep",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^([^:]+):(\\d+):(\\d+): \\[([^\\]]+)\\] (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^# Type checking files:",
            "endsPattern": "^(No type error detected|Detected \\d+ problems)"
          }
        }
      ]
    },
    {
      "label": "Format: All JSON Files",
      "type": "shell",
      "command": "npx",
      "args": ["prettier", "--write", "**/*.json", "**/*.jsonc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Format: All YAML Files",
      "type": "shell",
      "command": "npx",
      "args": ["prettier", "--write", "**/*.yaml", "**/*.yml"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
